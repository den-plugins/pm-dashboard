<table id="pm_dashboard_header" style="table-layout; fixed; width: 70%">
  <tr>
    <td><span>Budget Hours (BAC)</span></td>
    <td class="value"><%= hnum @bac_hours %> hours</td>
    
    <td><span>Budget to Date</span></td>
    <td class="value"><%= hnum @budget_to_date %></td></td>
    
    <td><span>Estimate to Complete</span></td>
    <td class="value"><%= hnum @estimate_to_complete %></td>
  </tr>
  
  <tr>
    <td><span>Budget Amount (BAC)</span></td>
    <td class="value"><%= hnum @bac_amount %></td>
    
    <td><span>Actuals to Date</span></td>
    <td class="value"><%= hnum @actuals_to_date %></td>
    
    <td><span>Estimate at Complete</span></td>
    <td class="value"><%= hnum (estimate_at_complete = @actuals_to_date - @estimate_to_complete) %></td>
  </tr>
  
  <tr>
    <td><span>Contingency Amount</span></td>
    <td class="value"><%= hnum @contingency_amount %></td>
    
    <td><span>Variance Amount to Date</span></td>
    <td class="value"><%= hnum (@budget_to_date - @actuals_to_date) %></td>
    
    <td><span>CV at Complete</span></td>
    <td class="value"><%= hnum (@bac_amount - estimate_at_complete) %></td>
  </tr>
  
  <tr>
    <td><span>Total Project Budget</span></td>
    <td class="value"><%= hnum @project_budget %></td>
    
    <td><span>Variance % to Date</span></td>
    <td class="value"><%= hnum (@budget_to_date.to_i.eql?(0) ? 0 : (((@budget_to_date - @actuals_to_date)/@budget_to_date) * 100)) %> %</td>
    
    <td><span>CV at Complete (with Contingency)</span></td>
    <td class="value"><%= hnum (@project_budget - estimate_at_complete) %></td>
  </tr>
</table>
