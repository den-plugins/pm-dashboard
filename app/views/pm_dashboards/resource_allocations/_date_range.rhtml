<% unless allocation.nil? %>
<p id="date_range_<%= allocation.id %>">
  <%= l(:label_date_from_to,  :start => content_tag('input', '', :value => "#{allocation.start_date}", :readonly => 'readonly', :size => 10) +
                                                                       content_tag('span', 'calendar', :style => "width: 17px; text-indent: -9999px; display: inline-block;"),
                                                     :end => content_tag('input', '', :value => "#{allocation.end_date}", :readonly => 'readonly', :size => 10) + 
                                                                     content_tag('span', 'calendar', :style => "width: 17px; text-indent: -9999px; display: inline-block;")) %>
  <span class='button-like'><%= allocation.resource_allocation %> %</span>
</p>
<% end %>
